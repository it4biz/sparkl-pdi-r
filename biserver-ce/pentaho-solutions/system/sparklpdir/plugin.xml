<?xml version="1.0" encoding="UTF-8"?>
<plugin title="sparklpdir" loader="DEFAULT">
<overlays>
		<overlay id="startup.sparklpdir" resourcebundle="content/sparklpdir/resources/lang/messages">
			<menubar id="toolsmenu">
	        	<menuitem id="sparklpdir" label="${Launcher.sparklpdir}" command="mantleXulHandler.openUrl('${Launcher.sparklpdir}','${Launcher.sparklpdir_TOOLTIP}','plugin/sparklpdir/api/default')"/>
