		<static-path url="/sparklpdir/static" localFolder="static"/>
		<static-path url="/sparklpdir/resources" localFolder="resources"/>
	</static-paths>
	<content-types>
		<content-type>
			<title>Sparklpdir</title>
			<description></description>
			<company name="" url="" logo="@PLUGIN_COMPANY_LOGO@"></company>
		</content-type>
	</content-types>
	<content-generator
		id="sparklpdir"
		title="Sparklpdir"
		type="sparklpdir"
		class="pt.webdetails.cpk.CpkContentGenerator"/>
